<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="text-center mb-4">Login</h2>
      
      <% if flash[:alert] %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= flash[:alert] %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>
      
      <%= form_with url: login_path, local: true do |form| %>
        <div class="mb-3">
          <%= form.label :email, class: "form-label" %>
          <%= form.email_field :email, class: "form-control", placeholder: "Enter your email", required: true %>
        </div>
        
        <div class="mb-3">
          <%= form.label :password, class: "form-label" %>
          <%= form.password_field :password, class: "form-control", placeholder: "Enter your password", required: true %>
        </div>
        
        <div class="d-grid">
          <%= form.submit "Login", class: "btn btn-primary" %>
        </div>
      <% end %>
      
      <div class="text-center mt-3">
        <p class="text-muted">Students and Mentors can login with their email and password</p>
      </div>
    </div>
  </div>
</div>
