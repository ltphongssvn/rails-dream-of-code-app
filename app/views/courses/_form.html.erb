<%# File: app/views/courses/_form.html.erb %>
<%= form_with(model: course) do |form| %>
  <% if course.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
        <% course.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :coding_class_id, style: "display: block" %>
    <%= form.collection_select :coding_class_id, CodingClass.all, :id, :title, { prompt: "Select a coding class" } %>
  </div>

  <div>
    <%= form.label :trimester_id, style: "display: block" %>
    <%= form.collection_select :trimester_id, Trimester.all, :id, :display_name, { prompt: "Select a trimester" } %>
  </div>

  <div>
    <%= form.label :max_enrollment, style: "display: block" %>
    <%= form.number_field :max_enrollment %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>