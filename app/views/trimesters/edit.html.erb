<%# File: app/views/trimesters/edit.html.erb %>
<h1>Edit Trimester</h1>

<%= form_with(model: @trimester, local: true) do |form| %>
  <% if @trimester.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@trimester.errors.count, "error") %> prohibited this trimester from being saved:</h2>

      <ul>
        <% @trimester.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :year, style: "display: block" %>
    <%= form.text_field :year %>
  </div>

  <div>
    <%= form.label :term, style: "display: block" %>
    <%= form.text_field :term %>
  </div>

  <div>
    <%= form.label :application_deadline, style: "display: block" %>
    <%= form.date_field :application_deadline %>
  </div>

  <div>
    <%= form.label :start_date, style: "display: block" %>
    <%= form.date_field :start_date %>
  </div>

  <div>
    <%= form.label :end_date, style: "display: block" %>
    <%= form.date_field :end_date %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<div>
  <%= link_to "Show this trimester", @trimester %> |
  <%= link_to "Back to trimesters", trimesters_path %>
</div>